<Window x:Class="data_report7.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:data_report7"
        mc:Ignorable="d"
        Title="Reporte de datos Dane" Height="450" Width="800" ResizeMode="NoResize" FontSize="20" FontWeight="Bold">
    <Grid Margin="10">

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="100" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Label Content="¡Bienvenido a la aplicación!" HorizontalAlignment="Center" VerticalAlignment="Top" FontSize="36" FontFamily="Century Gothic" FontWeight="Bold"/>
        <Label Content="Haz click en el boton para comenzar" HorizontalAlignment="Center" Grid.Row="1" VerticalAlignment="Center"/>
        <Button Content="Empezar" HorizontalAlignment="Center" Margin="0,147,0,0" Grid.Row="2" VerticalAlignment="Top" BorderBrush="Black" Background="#FFFFE04F" FontSize="25" FontWeight="Bold"/>

    </Grid>
</Window>
